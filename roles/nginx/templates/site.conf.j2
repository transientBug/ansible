# Lets Encrypt setup
server {
  listen 80;
  listen [::]:80;
  server_name {{ item.domains | join(' ') }};

  location ~ /.well-known {
    root /usr/share/nginx/html;
    allow all;
  }

  {% if item.ssl_domain %}
  return 301 https://$host$request_uri;
  {% else %}
  root {{item.root}};
  index index.html;

  {{ item.rules }}
  {% endif %}
}

{% if item.redirects %}
# SSL Redirects for a few additional domains
server {
  listen 80 default_server;
  listen [::]:80  default_server ipv6only=on;
  server_name {{ item.redirects | join(' ') }};

  location ~ /.well-known {
    root /usr/share/nginx/html;
    allow all;
  }

  {% if item.ssl_domain %}
  return 301 https://{{ item.redirect_domain }}$request_uri;
  {% else %}
  return 301 http://{{ item.redirect_domain }}$request_uri;
  {% endif %}
}

{% if item.ssl_domain %}
server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  server_name {{ item.redirects | join(' ') }};

  ssl_certificate /etc/letsencrypt/live/{{ item.ssl_domain }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{ item.ssl_domain }}/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/{{ item.ssl_domain }}/chain.pem;

  ssl_session_timeout 1d;
  ssl_session_cache shared:SSL:50m;
  ssl_session_tickets off;

  ssl_protocols TLSv1.2;
  ssl_ciphers EECDH+AESGCM:EECDH+AES;
  ssl_ecdh_curve secp384r1;
  ssl_prefer_server_ciphers on;

  ssl_stapling on;
  ssl_stapling_verify on;

  add_header Strict-Transport-Security "max-age=15768000; includeSubdomains; preload";
  add_header X-Frame-Options DENY;
  add_header X-Content-Type-Options nosniff;

  error_page 497 https://$server_name:$server_port$request_uri;

  location ~ /.well-known {
    root /usr/share/nginx/html;
    allow all;
  }

  return 301 https://{{ item.redirect_domain }}$request_uri;
}
{% endif %}
{% endif %}

{% if item.ssl_domain %}

# Actual server setup
server {
  listen 443 ssl http2 default_server;
  listen [::]:443 ssl http2 default_server ipv6only=on;
  server_name {{ item.domains | join(' ') }};

  access_log /var/log/nginx/{{ item.name }}.access.log;
  error_log /var/log/nginx/{{ item.name }}.error.log;

  client_max_body_size 1G;

  ssl_certificate /etc/letsencrypt/live/{{ item.ssl_domain }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{ item.ssl_domain }}/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/{{ item.ssl_domain }}/chain.pem;

  ssl_session_timeout 1d;
  ssl_session_cache shared:SSL:50m;
  ssl_session_tickets off;

  ssl_protocols TLSv1.2;
  ssl_ciphers EECDH+AESGCM:EECDH+AES;
  ssl_ecdh_curve secp384r1;
  ssl_prefer_server_ciphers on;

  ssl_stapling on;
  ssl_stapling_verify on;

  add_header Strict-Transport-Security "max-age=15768000; includeSubdomains; preload";
  add_header X-Frame-Options DENY;
  add_header X-Content-Type-Options nosniff;

  error_page 497 https://$server_name:$server_port$request_uri;

  proxy_pass_header Server;
  proxy_pass_header Connection;
  proxy_set_header Host $http_host;
  proxy_set_header X-Real-IP $remote_addr;

  proxy_http_version 1.1;
  proxy_set_header Upgrade $http_upgrade;
  proxy_set_header Connection "upgrade";

  location ~ /.well-known {
    root /usr/share/nginx/html;
    allow all;
  }

  {{ item.rules }}
}
{% endif %}
